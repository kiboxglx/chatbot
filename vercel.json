{
    "version": 2,
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "https://chatbot-production-e324.up.railway.app/:path*"
        },
        {
            "source": "/(.*)",
            "destination": "/frontend/index.html"
        }
    ]
}