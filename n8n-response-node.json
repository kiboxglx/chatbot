{
    "name": "Enviar Resposta WhatsApp",
    "type": "n8n-nodes-base.httpRequest",
    "parameters": {
        "method": "POST",
        "url": "http://evolution_api:8080/message/sendText/chatbot",
        "authentication": "none",
        "sendHeaders": true,
        "headerParameters": {
            "parameters": [
                {
                    "name": "apikey",
                    "value": "429683C4C977415CAAFCCE10F7D57E11"
                },
                {
                    "name": "Content-Type",
                    "value": "application/json"
                }
            ]
        },
        "sendBody": true,
        "bodyContentType": "json",
        "specifyBody": "json",
        "jsonBody": "={\n  \"number\": \"{{ $json.remoteJid || $json.body.key.remoteJid.replace('@s.whatsapp.net', '') }}\",\n  \"text\": \"{{ $json.responseMessage || $json.message }}\"\n}",
        "options": {
            "timeout": 10000
        }
    }
}